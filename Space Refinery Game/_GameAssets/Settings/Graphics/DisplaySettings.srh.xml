<?xml version="1.0" encoding="utf-8"?>
<SerializationReferenceHandler>
	<Count>3</Count>
	<Elements>
		<IEntitySerializable>
			<Type>Space_Refinery_Engine.SliderSetting</Type>
			<Reference>Field Of View</Reference>
			<Name>FoV</Name>
			<Description>
				Set the width of the character's view in degrees (°).
			</Description>
			<DefaultValue>
				<Type>Space_Refinery_Engine.SliderSettingValue</Type>
				<SliderValue>65</SliderValue>
			</DefaultValue>
			<Min>30</Min>
			<Max>120</Max>
			<SliderValueSuffix>°</SliderValueSuffix>
		</IEntitySerializable>
		<IEntitySerializable>
			<Type>Space_Refinery_Engine.SliderSetting</Type>
			<Reference>Max Framerate</Reference>
			<Name>Max FPS</Name>
			<Description>
				Set the maximum framerate for the game. Only used if Limit Framerate is enabled.
			</Description>
			<DefaultValue>
				<Type>Space_Refinery_Engine.SliderSettingValue</Type>
				<SliderValue>500</SliderValue>
			</DefaultValue>
			<Min>10</Min>
			<Max>1000</Max>
			<SliderValueSuffix>FPS</SliderValueSuffix>
		</IEntitySerializable>
		<IEntitySerializable>
			<Type>Space_Refinery_Engine.SwitchSetting</Type>
			<Reference>Limit Framerate</Reference>
			<Name>Limit FPS</Name>
			<Description>
				Enable to limit the framerate to the framerate specified in Max FPS.
			</Description>
			<DefaultValue>
				<Type>Space_Refinery_Engine.SwitchSettingValue</Type>
				<SwitchValue>True</SwitchValue>
			</DefaultValue>
		</IEntitySerializable>
	</Elements>
</SerializationReferenceHandler>