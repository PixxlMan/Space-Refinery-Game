<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>Space_Refinery_Game</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
	<EnablePreviewFeatures>True</EnablePreviewFeatures>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\Models\Machinery\MachineryGeneric.obj" />
    <None Remove="Assets\Models\Pipe\CleanedUpPipe.obj" />
    <None Remove="Assets\Models\Pipe\Pipe.obj" />
    <None Remove="Assets\Models\Pipe\Pipe180Bend.obj" />
    <None Remove="Assets\Models\Pipe\Pipe90Bend.obj" />
    <None Remove="Assets\Models\Pipe\PipeBend180.obj" />
    <None Remove="Assets\Models\Pipe\PipeBend45.obj" />
    <None Remove="Assets\Models\Pipe\PipeBend90.obj" />
    <None Remove="Assets\Models\Pipe\PipeStraight.obj" />
    <None Remove="Assets\Models\Pipe\PipeStraightDivergeT.obj" />
    <None Remove="Assets\Models\Pipe\PipeStraightDivergeX.obj" />
    <None Remove="Assets\Models\Pipe\PipeStraightDivergeY.obj" />
    <None Remove="Pipe_1mx1m_Straight.obj" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Assets\Models\Machinery\MachineryGeneric.obj">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\Models\Pipe\PipeBend180.obj">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\Models\Pipe\PipeBend45.obj">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\Models\Pipe\PipeBend90.obj">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\Models\Pipe\PipeStraight.obj">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\Models\Pipe\PipeStraightDivergeT.obj">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\Models\Pipe\PipeStraightDivergeX.obj">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\Models\Pipe\PipeStraightDivergeY.obj">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Veldrid" Version="4.8.0" />
    <PackageReference Include="Veldrid.SDL2" Version="4.8.0" />
    <PackageReference Include="Veldrid.SPIRV" Version="1.0.14" />
    <PackageReference Include="Veldrid.StartupUtilities" Version="4.8.0" />
    <PackageReference Include="Veldrid.Utilities" Version="4.8.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Space Refinery Game Renderer\Space Refinery Game Renderer.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="FixedPrecision">
      <HintPath>..\..\FixedPrecision\FixedPrecision\bin\Release\net6.0\FixedPrecision.dll</HintPath>
    </Reference>
    <Reference Include="FXRenderer">
      <HintPath>..\..\FXPRenderer\FXRenderer\bin\Release\net6.0\FXRenderer.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
